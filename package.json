{
  "name": "firebird-vscode",
  "displayName": "Firebird SQL",
  "icon": "docs/logo.png",
  "publisher": "wdtbrchan",
  "description": "Firebird database management extension",
  "version": "0.16.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/wdtbrchan/firebird-vscode.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Firebird",
      "properties": {
        "firebird.maxRows": {
          "type": "integer",
          "default": 1000,
          "description": "Maximum number of rows to fetch per page in query results."
        },
        "firebird.autoRollbackTimeout": {
          "type": "integer",
          "default": 60,
          "description": "Time in seconds before automatic transaction rollback."
        },
        "firebird.resultLocale": {
          "type": "string",
          "default": "en-US",
          "description": "Locale for formatting numbers and dates in query results (e.g. en-US, cs-CZ, de-DE)."
        },
        "firebird.allowedLanguages": {
          "type": "array",
          "default": [
            "sql"
          ],
          "items": {
            "type": "string"
          },
          "description": "List of language IDs where query execution is allowed."
        },
        "firebird.useEmptyLineAsSeparator": {
          "type": "boolean",
          "default": false,
          "description": "Treat empty lines (two or more newlines) as SQL statement separators."
        },
        "firebird.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Active Connection CodeLens."
        },
        "firebird.enableCodeLensInNonSqlFiles": {
          "type": "boolean",
          "default": false,
          "description": "Enable CodeLens in non-SQL files (requires the language to be in 'firebird.allowedLanguages')."
        }
      }
    },
    "commands": [
      {
        "command": "firebird.runQuery",
        "title": "Run Query",
        "category": "Firebird",
        "icon": "$(play)"
      },
      {
        "command": "firebird.executeScript",
        "title": "Run Script",
        "category": "Firebird",
        "icon": "$(run-all)"
      },
      {
        "command": "firebird.addDatabase",
        "title": "Add Database",
        "icon": "$(add)"
      },
      {
        "command": "firebird.removeDatabase",
        "title": "Remove Database",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.openSettings",
        "title": "Firebird Settings",
        "icon": "$(gear)"
      },
      {
        "command": "firebird.editDatabase",
        "title": "Edit Database",
        "icon": "$(edit)"
      },
      {
        "command": "firebird.refreshDatabase",
        "title": "Refresh Database",
        "icon": "$(refresh)"
      },
      {
        "command": "firebird.selectDatabase",
        "title": "Select Database",
        "icon": "$(plug)"
      },
      {
        "command": "firebird.createGroup",
        "title": "New Group",
        "icon": "$(new-folder)"
      },
      {
        "command": "firebird.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.renameGroup",
        "title": "Rename Group",
        "icon": "$(edit)"
      },
      {
        "command": "firebird.backupConnections",
        "title": "Backup Connections",
        "icon": "$(save-all)"
      },
      {
        "command": "firebird.restoreConnections",
        "title": "Restore Connections",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "firebird.commit",
        "title": "Commit Transaction",
        "icon": "$(check)",
        "enablement": "editorLangId == sql"
      },
      {
        "command": "firebird.rollback",
        "title": "Rollback Transaction",
        "icon": "$(discard)",
        "enablement": "editorLangId == sql"
      },
      {
        "command": "firebird.disconnectDatabase",
        "title": "Disconnect Database",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "firebird.editFilter",
        "title": "Edit Filter",
        "icon": "$(search)"
      },
      {
        "command": "firebird.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "firebird.closeResults",
        "title": "Close Results",
        "icon": "$(close)"
      },
      {
        "command": "firebird.createScript",
        "title": "New Script",
        "icon": "$(new-file)"
      },
      {
        "command": "firebird.createObject",
        "title": "Create New",
        "icon": "$(add)"
      },
      {
        "command": "firebird.addScript",
        "title": "Add Existing Script",
        "icon": "$(folder-opened)"
      },
      {
        "command": "firebird.createScriptFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "firebird.renameScriptFolder",
        "title": "Rename Folder",
        "icon": "$(edit)"
      },
      {
        "command": "firebird.deleteScript",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.deleteObject",
        "title": "Drop",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.openTableInfo",
        "title": "Table Info",
        "icon": "$(info)"
      },
      {
        "command": "firebird.openSourceInfo",
        "title": "View Source",
        "icon": "$(file-code)"
      },
      {
        "command": "firebird.openIndexInfo",
        "title": "Index Info",
        "icon": "$(info)"
      },
      {
        "command": "firebird.openGeneratorInfo",
        "title": "Generator Info",
        "icon": "$(info)"
      },
      {
        "command": "firebird.connectSlot1",
        "title": "Connect to Slot 1",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot2",
        "title": "Connect to Slot 2",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot3",
        "title": "Connect to Slot 3",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot4",
        "title": "Connect to Slot 4",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot5",
        "title": "Connect to Slot 5",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot6",
        "title": "Connect to Slot 6",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot7",
        "title": "Connect to Slot 7",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot8",
        "title": "Connect to Slot 8",
        "category": "Firebird"
      },
      {
        "command": "firebird.connectSlot9",
        "title": "Connect to Slot 9",
        "category": "Firebird"
      },
      {
        "command": "firebird.addToFavorites",
        "title": "Add to Favorites",
        "icon": "$(heart)"
      },
      {
        "command": "firebird.removeFromFavorites",
        "title": "Remove from Favorites",
        "icon": "$(heart-filled)"
      },
      {
        "command": "firebird.createFavoriteFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "firebird.deleteFavoriteFolder",
        "title": "Delete Folder",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.renameFavoriteFolder",
        "title": "Rename Folder",
        "icon": "$(edit)"
      },
      {
        "command": "firebird.favorites.clear",
        "title": "Clear All Favorites",
        "icon": "$(clear-all)"
      },
      {
        "command": "firebird.switchToTriggerList",
        "title": "Show as List",
        "icon": "$(list-flat)"
      },
      {
        "command": "firebird.switchToTriggerGroups",
        "title": "Show as Groups",
        "icon": "$(list-tree)"
      }
    ],
    "keybindings": [
      {
        "command": "firebird.runQuery",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && firebird:queryExecutionEnabled"
      },
      {
        "command": "firebird.executeScript",
        "key": "ctrl+alt+enter",
        "mac": "cmd+alt+enter",
        "when": "editorTextFocus && editorLangId == sql"
      },
      {
        "command": "firebird.closeResults",
        "key": "ctrl+shift+backspace",
        "mac": "cmd+shift+backspace"
      },
      {
        "command": "firebird.commit",
        "key": "ctrl+alt+shift+c",
        "mac": "cmd+alt+shift+c",
        "when": "editorTextFocus && firebird:queryExecutionEnabled && firebird.hasActiveTransaction"
      },
      {
        "command": "firebird.rollback",
        "key": "ctrl+alt+shift+r",
        "mac": "cmd+alt+shift+r",
        "when": "editorTextFocus && firebird:queryExecutionEnabled && firebird.hasActiveTransaction"
      },
      {
        "command": "firebird.connectSlot1",
        "key": "ctrl+alt+1",
        "mac": "cmd+alt+1"
      },
      {
        "command": "firebird.connectSlot2",
        "key": "ctrl+alt+2",
        "mac": "cmd+alt+2"
      },
      {
        "command": "firebird.connectSlot3",
        "key": "ctrl+alt+3",
        "mac": "cmd+alt+3"
      },
      {
        "command": "firebird.connectSlot4",
        "key": "ctrl+alt+4",
        "mac": "cmd+alt+4"
      },
      {
        "command": "firebird.connectSlot5",
        "key": "ctrl+alt+5",
        "mac": "cmd+alt+5"
      },
      {
        "command": "firebird.connectSlot6",
        "key": "ctrl+alt+6",
        "mac": "cmd+alt+6"
      },
      {
        "command": "firebird.connectSlot7",
        "key": "ctrl+alt+7",
        "mac": "cmd+alt+7"
      },
      {
        "command": "firebird.connectSlot8",
        "key": "ctrl+alt+8",
        "mac": "cmd+alt+8"
      },
      {
        "command": "firebird.connectSlot9",
        "key": "ctrl+alt+9",
        "mac": "cmd+alt+9"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "firebird-explorer",
          "title": "Firebird",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "firebird-explorer": [
        {
          "id": "firebird.databases",
          "name": "Databases",
          "icon": "$(database)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "firebird.databases",
        "contents": "$(loading~spin) Loading...",
        "when": "!firebird.isInitialized"
      },
      {
        "view": "firebird.databases",
        "contents": "No firebird connections found.\n[Add Database](command:firebird.addDatabase)",
        "when": "firebird.isInitialized"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "firebird.addDatabase",
          "when": "view == firebird.databases",
          "group": "navigation"
        },
        {
          "command": "firebird.createGroup",
          "when": "view == firebird.databases",
          "group": "navigation"
        },
        {
          "command": "firebird.openSettings",
          "when": "view == firebird.databases",
          "group": "navigation@10"
        },
        {
          "command": "firebird.backupConnections",
          "when": "view == firebird.databases",
          "group": "navigation@9"
        },
        {
          "command": "firebird.restoreConnections",
          "when": "view == firebird.databases",
          "group": "navigation@9"
        }
      ],
      "editor/title": [
        {
          "command": "firebird.runQuery",
          "when": "editorLangId == sql",
          "group": "navigation"
        },
        {
          "command": "firebird.executeScript",
          "when": "editorLangId == sql",
          "group": "navigation"
        },
        {
          "command": "firebird.rollback",
          "when": "editorLangId == sql && firebird.hasActiveTransaction",
          "group": "navigation"
        },
        {
          "command": "firebird.commit",
          "when": "editorLangId == sql && firebird.hasActiveTransaction",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "firebird.selectDatabase",
          "when": "view == firebird.databases && viewItem == database",
          "group": "inline"
        },
        {
          "command": "firebird.selectDatabase",
          "when": "view == firebird.databases && viewItem == database-error",
          "group": "inline"
        },
        {
          "command": "firebird.disconnectDatabase",
          "when": "view == firebird.databases && viewItem == database-active",
          "group": "inline"
        },
        {
          "command": "firebird.refreshDatabase",
          "when": "view == firebird.databases && viewItem == database-active",
          "group": "inline"
        },
        {
          "command": "firebird.editDatabase",
          "when": "view == firebird.databases && viewItem == database",
          "group": "inline"
        },
        {
          "command": "firebird.editDatabase",
          "when": "view == firebird.databases && viewItem == database-error",
          "group": "inline"
        },
        {
          "command": "firebird.deleteGroup",
          "when": "view == firebird.databases && viewItem == group",
          "group": "inline"
        },
        {
          "command": "firebird.renameGroup",
          "when": "view == firebird.databases && viewItem == group",
          "group": "inline"
        },
        {
          "command": "firebird.clearFilter",
          "when": "view == firebird.databases && viewItem == filter-item",
          "group": "inline"
        },
        {
          "command": "firebird.createObject",
          "when": "view == firebird.databases && (viewItem == tables || viewItem == views || viewItem == triggers || viewItem == procedures || viewItem == generators)",
          "group": "inline"
        },
        {
          "command": "firebird.createScript",
          "when": "view == firebird.databases && (viewItem == local-scripts || viewItem == global-scripts || viewItem == script-folder)",
          "group": "inline@1"
        },
        {
          "command": "firebird.addScript",
          "when": "view == firebird.databases && (viewItem == local-scripts || viewItem == global-scripts || viewItem == script-folder)",
          "group": "inline@2"
        },
        {
          "command": "firebird.createScriptFolder",
          "when": "view == firebird.databases && (viewItem == local-scripts || viewItem == global-scripts || viewItem == script-folder)",
          "group": "inline@3"
        },
        {
          "command": "firebird.renameScriptFolder",
          "when": "view == firebird.databases && viewItem == script-folder",
          "group": "inline@4"
        },
        {
          "command": "firebird.deleteScript",
          "when": "view == firebird.databases && (viewItem == script-file || viewItem == script-folder)",
          "group": "inline@5"
        },
        {
          "command": "firebird.addToFavorites",
          "when": "view == firebird.databases && (viewItem == table || viewItem == view || viewItem == trigger || viewItem == procedure || viewItem == generator || viewItem == function || viewItem == index-item || viewItem == script-file)",
          "group": "inline"
        },
        {
          "command": "firebird.openTableInfo",
          "when": "view == firebird.databases && (viewItem == table || viewItem == table-favorite || viewItem == table-triggers || viewItem == table-indexes)",
          "group": "inline"
        },
        {
          "command": "firebird.openSourceInfo",
          "when": "view == firebird.databases && (viewItem == trigger || viewItem == procedure || viewItem == view || viewItem == function)",
          "group": "inline"
        },
        {
          "command": "firebird.openGeneratorInfo",
          "when": "view == firebird.databases && viewItem == generator",
          "group": "inline"
        },
        {
          "command": "firebird.openIndexInfo",
          "when": "view == firebird.databases && viewItem == index-item",
          "group": "inline"
        },
        {
          "command": "firebird.createFavoriteFolder",
          "when": "view == firebird.databases && (viewItem == favorites-root || viewItem == favorite-folder)",
          "group": "inline"
        },
        {
          "command": "firebird.removeFromFavorites",
          "when": "view == firebird.databases && (viewItem == table-favorite || viewItem == view-favorite || viewItem == trigger-favorite || viewItem == procedure-favorite || viewItem == generator-favorite || viewItem == function-favorite || viewItem == index-favorite || viewItem == script-favorite || viewItem == script-file-favorite)",
          "group": "inline"
        },
        {
          "command": "firebird.deleteFavoriteFolder",
          "when": "view == firebird.databases && viewItem == favorite-folder",
          "group": "inline"
        },
        {
          "command": "firebird.renameFavoriteFolder",
          "when": "view == firebird.databases && viewItem == favorite-folder",
          "group": "inline"
        },
        {
          "command": "firebird.favorites.clear",
          "when": "view == firebird.databases && viewItem == favorites-root",
          "group": "inline"
        },
        {
          "command": "firebird.switchToTriggerGroups",
          "when": "view == firebird.databases && viewItem == trigger-folder-list",
          "group": "inline"
        },
        {
          "command": "firebird.switchToTriggerList",
          "when": "view == firebird.databases && (viewItem == table-triggers-grouped || viewItem == trigger-folder-grouped)",
          "group": "inline"
        },
        {
          "command": "firebird.switchToTriggerGroups",
          "when": "view == firebird.databases && viewItem == table-triggers-list",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test-unit": "tsc -p ./ && node out/test/unit/queryExtractor.test.js && node out/test/unit/scriptParser.test.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "iconv-lite": "^0.7.2",
    "node-firebird": "^1.1.0",
    "uuid": "^8.3.2"
  }
}

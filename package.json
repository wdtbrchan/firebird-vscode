{
  "name": "firebird-vscode",
  "displayName": "Firebird SQL",
  "publisher": "wdtbrchan",
  "description": "Firebird database management extension",
  "version": "1.1.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/wdtbrchan/firebird-vscode.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Firebird",
      "properties": {
        "firebird.maxRows": {
          "type": "integer",
          "default": 1000,
          "description": "Maximum number of rows to fetch per page in query results."
        },
        "firebird.autoRollbackTimeout": {
          "type": "integer",
          "default": 60,
          "description": "Time in seconds before automatic transaction rollback."
        }
      }
    },
    "commands": [
      {
        "command": "firebird.runQuery",
        "title": "Firebird: Run Query"
      },
      {
        "command": "firebird.addDatabase",
        "title": "Add Database",
        "icon": "$(add)"
      },
      {
        "command": "firebird.removeDatabase",
        "title": "Remove Database",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.editDatabase",
        "title": "Edit Database",
        "icon": "$(edit)"
      },
      {
        "command": "firebird.selectDatabase",
        "title": "Select Database",
        "icon": "$(plug)"
      },
      {
        "command": "firebird.createGroup",
        "title": "New Group",
        "icon": "$(new-folder)"
      },
      {
        "command": "firebird.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "firebird.commit",
        "title": "Commit Transaction",
        "icon": "$(check)",
        "enablement": "editorLangId == sql"
      },
      {
        "command": "firebird.rollback",
        "title": "Rollback Transaction",
        "icon": "$(discard)",
        "enablement": "editorLangId == sql"
      },
      {
        "command": "firebird.disconnectDatabase",
        "title": "Disconnect Database",
        "icon": "$(debug-disconnect)"
      }
    ],
    "keybindings": [
      {
        "command": "firebird.runQuery",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == sql"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "firebird-explorer",
          "title": "Firebird",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "firebird-explorer": [
        {
          "id": "firebird.databases",
          "name": "Databases"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "firebird.addDatabase",
          "when": "view == firebird.databases",
          "group": "navigation"
        },
        {
          "command": "firebird.createGroup",
          "when": "view == firebird.databases",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "firebird.commit",
          "when": "editorLangId == sql && firebird.hasActiveTransaction",
          "group": "navigation"
        },
        {
          "command": "firebird.rollback",
          "when": "editorLangId == sql && firebird.hasActiveTransaction",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "firebird.selectDatabase",
          "when": "view == firebird.databases && viewItem == database",
          "group": "inline"
        },
        {
          "command": "firebird.disconnectDatabase",
          "when": "view == firebird.databases && viewItem == database-active",
          "group": "inline"
        },
        {
          "command": "firebird.editDatabase",
          "when": "view == firebird.databases && viewItem == database",
          "group": "inline"
        },
        {
          "command": "firebird.deleteGroup",
          "when": "view == firebird.databases && viewItem == group",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "iconv-lite": "^0.7.2",
    "node-firebird": "^1.1.0"
  }
}
